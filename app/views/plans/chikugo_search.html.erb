<%= render "shared/header" %>
<div class='main'>
  <%# プラン一覧 %>
  <div class='plan-contents'>
    <h2 class='title'>筑後地区検索結果</h2>
    <div class= 'plan-share'>
      <ul class='plan-lists'>
        <% @plans.each do |plan| %>
          <% if plan.area_id ==4 %>
            <li class='list'>
              <%= link_to plan_path(plan) do %>
                <div class='plan-img-content'>
                  <%= image_tag (plan.image), class: "plan-img" %>
                </div>
                <div class='plan-info'>
                  <h3 class='plan-name'>
                    <%= plan.title %>
                  </h3>
                  <div class='plan-area'>
                    <span><%= plan.area.name %><br></span>
                  </div>
                <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= link_to new_plan_path, class: 'plan-btn' do %>
  <span class='plan-btn-text'>投稿する</span>
  <%= image_tag 'camera.png' , size: '185x50' ,class: "plan-btn-icon" %>
<% end %>
<%= render "shared/footer" %>