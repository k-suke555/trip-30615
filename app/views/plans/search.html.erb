<%= render "shared/header" %>
<div class='main'>
  <%# プラン一覧 %>
  <div class='plan-contents'>
    <h2 class='title'>検索結果</h2>
    <div class= 'plan-share'>
      <ul class='plan-lists'>
        <% @plans.each do |plan| %>
          <%= render partial: "plan", locals: { plan: plan } %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= link_to new_plan_path, class: 'plan-btn' do %>
  <span class='plan-btn-text'>投稿する</span>
  <%= image_tag 'camera.png' , size: '185x50' ,class: "plan-btn-icon" %>
<% end %>
<%= render "shared/footer" %>